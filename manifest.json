{
  "manifest_version": 3,
  "name": "Pursue Networking",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pursue Networking",
    "default_icon": "logo.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ]
}